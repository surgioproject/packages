{
  "name": "@surgio/logger",
  "version": "1.3.0",
  "description": "Logger helper for Surgio projects",
  "homepage": "https://surgio.js.org",
  "repository": "https://github.com/surgioproject/packages/tree/master/packages/logger",
  "author": "Roy Li <me@royli.dev>",
  "bugs": {
    "url": "https://github.com/surgioproject/surgio/issues"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "run-s test",
    "lint": "eslint ."
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "winston": "^3.2.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
